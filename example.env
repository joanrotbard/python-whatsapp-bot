# =============================================================================
# WhatsApp API Configuration
# =============================================================================
# This token expires after 24 hours. You can get a new one from the your Meta App Dashboard > API Setup
# Or you can create an access token at the System User level from the Meta Business Settings: https://business.facebook.com/settings/system-users
ACCESS_TOKEN=""

# App credentials from Meta App Dashboard
APP_ID=""
APP_SECRET=""  # Required for webhook signature validation
RECIPIENT_WAID="" # Your WhatsApp number with country code (e.g., +31612345678)
VERSION="v18.0"
PHONE_NUMBER_ID=""

# Webhook verification token (can be any string, must match what you set in Meta App Dashboard)
VERIFY_TOKEN=""

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=""
OPENAI_ASSISTANT_ID=""

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis connection URL for thread storage
# Format: redis://[host]:[port]/[database_number]
# Default: redis://localhost:6379/0
REDIS_URL="redis://localhost:6379/0"

# Thread TTL (Time To Live) in seconds
# Threads expire after this time of inactivity
# Default: 3600 (1 hour)
REDIS_THREAD_TTL=3600

# =============================================================================
# Celery Configuration (Task Queue)
# =============================================================================
# Redis URL for Celery message broker
# Use a different database number than REDIS_URL
# Default: redis://localhost:6379/1
CELERY_BROKER_URL="redis://localhost:6379/1"

# Redis URL for Celery result backend
# Can be same as CELERY_BROKER_URL or different
# Default: redis://localhost:6379/1
CELERY_RESULT_BACKEND="redis://localhost:6379/1"

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Redis URL for rate limiting storage
# Use a different database number than REDIS_URL and CELERY_BROKER_URL
# Default: redis://localhost:6379/2
RATELIMIT_STORAGE_URL="redis://localhost:6379/2"

# Enable or disable rate limiting
# Options: true, false
# Default: true
RATELIMIT_ENABLED=true

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Sentry DSN for error tracking (optional)
# Get your DSN from https://sentry.io
# Leave empty to disable Sentry
SENTRY_DSN=""

# Enable Prometheus metrics endpoint at /metrics
# Options: true, false
# Default: true
ENABLE_METRICS=true

# =============================================================================
# Application Configuration
# =============================================================================
# Enable debug mode (not recommended for production)
# Options: true, false
# Default: false
DEBUG=false

# Flask environment
# Options: development, production, testing
# Default: development
FLASK_ENV=development

# Secret key for Flask sessions (change in production!)
# Generate a secure random string for production
# Default: dev-secret-key-change-in-production
SECRET_KEY="dev-secret-key-change-in-production"
