# WhatsApp Cloud API Configuration
ACCESS_TOKEN=your_whatsapp_access_token_here
PHONE_NUMBER_ID=your_phone_number_id_here
VERSION=v24.0
VERIFY_TOKEN=your_webhook_verify_token_here
RECIPIENT_WAID=your_test_recipient_wa_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ASSISTANT_ID=your_openai_assistant_id_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_THREAD_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
RATELIMIT_STORAGE_URL=redis://localhost:6379/0

# Rate Limiting
RATELIMIT_ENABLED=true

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn_here_optional
ENABLE_METRICS=true

# Application Configuration
DEBUG=false
FLASK_ENV=production
SECRET_KEY=your_secret_key_here

# Meta App Configuration (for signature validation)
APP_ID=your_meta_app_id_here
APP_SECRET=your_meta_app_secret_here

# Provider Selection (NEW - allows switching providers)
# Message Provider: whatsapp, telegram, sms, etc.
MESSAGE_PROVIDER=whatsapp

# AI Provider: openai, anthropic, gemini, etc.
AI_PROVIDER=openai

# Thread Storage: redis, postgresql, mongodb, etc.
THREAD_STORAGE_TYPE=redis
